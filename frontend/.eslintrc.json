{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "next/core-web-vitals"
    ],
    "overrides": [
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off", // Suppress errors for missing 'import React' in files for Next.js
        "react/no-unescaped-entities": "off",
        "react/display-name": "off",
        "react-hooks/exhaustive-deps": "off",
        "@next/next/no-img-element": "off"
    }
}
